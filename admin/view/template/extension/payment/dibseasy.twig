{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
           
		   <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dibseasy_status" id="input-status" class="form-control">
                   {% if payment_dibseasy_status %}
                        <option value="1" selected="selected"> {{text_enabled}}</option>
                        <option value="0"> {{text_disabled}} </option>
                    {% else %}
                        <option value="1"> {{text_enabled}} </option>
                        <option value="0" selected="selected"> {{text_disabled}}</option>
                   {% endif %}
              </select>
            </div>
          </div>
		  
		 <div class="form-group">
            <label class="col-sm-2 control-label" for="dibseasy_sort_order"> {{ entry_dibseasy_sort_order }} </label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_sort_order" value="{{ payment_dibseasy_sort_order }}" id="dibseasy_sort_order" class="form-control" />
            </div>
         </div>
		 
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_dibseasy_livekey }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_livekey" value="{{ payment_dibseasy_livekey }}" id="input-total" class="form-control" />
            </div>
          </div> 

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_dibseasy_checkoutkey_live }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_checkoutkey_live" value="{{ payment_dibseasy_checkoutkey_live }}" id="input-total" class="form-control" />
            </div>
          </div>      

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total">{{entry_dibseasy_testkey}}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_testkey" value="{{ payment_dibseasy_testkey }}" id="input-total" class="form-control" />
            </div>
          </div> 
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_dibseasy_checkoutkey }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_checkoutkey_test" value="{{ payment_dibseasy_checkoutkey_test }}" id="input-total" class="form-control" />
            </div>
          </div> 
		  
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-testmode">{{ entry_testmode }}</label>
            <div class="col-sm-10">
              <select name="payment_dibseasy_testmode" id="input-status" class="form-control">
                  {% if  payment_dibseasy_testmode %}
                      <option value="1" selected="selected">{{text_enabled}}</option>
                      <option value="0">{{text_disabled}}</option>
                      {% else %}
                      <option value="1">{{text_enabled}}</option>
                      <option value="0" selected="selected">{{text_disabled}}</option>
                  {% endif %}
              </select>
            </div>
          </div>
		  
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-checkout-type">{{ entry_checkout_type }}</label>
            <div class="col-sm-10">
              <select name="payment_dibseasy_checkout_type" id="input-status" class="form-control">
                  {% if payment_dibseasy_checkout_type == 'embedded' %}
                      <option value="embedded" selected="selected">{{text_checkout_type_embedded}}</option>
                      <option value="hosted">{{text_checkout_type_hosted}}</option>
                      {% else %}
                      <option value="embedded">{{text_checkout_type_embedded}}</option>
                      <option value="hosted" selected="selected">{{text_checkout_type_hosted}}</option>
                  {% endif %}
              </select>
            </div>
          </div>
		   
		  <div class="form-group required">
            <label class="col-sm-2 control-label" for="dibseasy_terms_and_conditions">{{ entry_dibseasy_terms_and_conditions }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_terms_and_conditions" placeholder="http[s]://" value="{{ payment_dibseasy_terms_and_conditions }}" id="dibseasy_term_and_conditions" class="form-control" />
              {% if error_easy_term_and_conditions %}
                <div class="text-danger">{{ error_easy_term_and_conditions }}</div>
              {% endif %}
            </div>
         </div>

         <div class="form-group required">
            <label class="col-sm-2 control-label" for="dibseasy_merchant_terms_and_conditions">{{ entry_dibseasy_merchant_terms_and_conditions }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_merchant_terms_and_conditions" placeholder="http[s]://" value="{{ payment_dibseasy_merchant_terms_and_conditions }}" id="dibseasy_merchant_term_and_conditions" class="form-control" />
              {% if error_easy_merchant_term_and_conditions %}
                <div class="text-danger">{{ error_easy_merchant_term_and_conditions }}</div>
              {% endif %}
            </div>
         </div>
		  
		 <div class="form-group">
            <label class="col-sm-2 control-label" for="input-customer-type">{{entry_allowed_customer_type}}</label>
            <div class="col-sm-10">
              <select name="payment_dibseasy_allowed_customer_type" id="input-allowed_customer_type" class="form-control">
                    <option value="b2c" {{b2c_selected }}>  {{text_b2c}} </option>
                    <option value="b2b" {{b2b_selected }}>  {{text_b2b}} </option>
                    <option value="b2c_b2b_b2c" {{ b2c_b2b_b2c_selected }}>  {{text_b2c_b2b_b2c}} </option>
                    <option value="b2b_b2c_b2b" {{ b2b_b2c_b2b_selected }}>  {{text_b2b_b2c_b2b}} </option>
              </select>
            </div> 
          </div> 
		
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dibseasy_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dibseasy_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}"> {{order_status.name}}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
		  
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-language">{{ entry_language }}</label>
            <div class="col-sm-10">
              <select name="payment_dibseasy_language" id="input-status" class="form-control">
                 <option value="en-GB" {{ english_selected }}>  {{text_english }} </option>
                 <option value="sv-SE" {{ swedish_selected }}>  {{ text_swedish }} </option>
                 <option value="nb-NO" {{ norwegian_select }}>  {{ text_norwegian }} </option>
                 <option value="da-DK" {{ danish_select }}>  {{ text_danish }} </option>
              </select>
            </div>
          </div>

          <div class="form-group">
 
                <label class="col-sm-2 control-label" for="dibseasy_sort_order"> Auto Capture </label>                 
                <div class="col-sm-10"> 
                      {% if payment_dibseasy_autocapture %}
                      <input type="checkbox" name="payment_dibseasy_autocapture" value="0" checked="checked" id="dibseasy_autocapture" class="form-control"/>
                      {% else %}
                      <input type="checkbox" name="payment_dibseasy_autocapture" value="1" id="dibseasy_autocapture" class="form-control" />
                      {% endif %} 
                </div> 
         </div>
       
         <div class="form-group required">
            <label class="col-sm-2 control-label" for="dibseasy_wb_url">{{ entry_dibseasy_wb_url }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_wb_url" placeholder="https://{{ site_url }}hook/index.php" {% if payment_dibseasy_wb_url %} value="{{ payment_dibseasy_wb_url }}" {% else %} value="https://{{ site_url }}hook/index.php" {% endif %}  id="dibseasy_wb_url" class="form-control" />
              {% if error_dibseasy_wb_url %}
                <div class="text-danger">{{ error_dibseasy_wb_url }}</div>
              {% endif %}
            </div>
         </div>        
         <div class="form-group required">
            <label class="col-sm-2 control-label" for="dibseasy_wb_auth">{{ entry_dibseasy_wb_auth }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dibseasy_wb_auth" placeholder="AZ-12345678-az" {% if payment_dibseasy_wb_auth %} value="{{ payment_dibseasy_wb_auth }}" {% else %} value="AZ-12345678-az" {% endif %} id="dibseasy_wb_auth" class="form-control" />
              {% if error_dibseasy_wb_auth %}
                <div class="text-danger">{{ error_dibseasy_wb_auth }}</div>
              {% endif %}
            </div>
         </div>
		 
		 <div class="form-group">	 
           
			<label class="col-sm-2 control-label" for="dibseasy_backend_debug">{{ entry_dibseasy_backend_debug }}</label>
            <div class="col-sm-4">
				<select name="payment_dibseasy_backend_debug" id="input-backend-debug" class="form-control">
                   {% if payment_dibseasy_backend_debug %}
                        <option value="1" selected="selected"> {{text_enabled}}</option>
                        <option value="0"> {{text_disabled}} </option>
                    {% else %}
                        <option value="1"> {{text_enabled}} </option>
                        <option value="0" selected="selected"> {{text_disabled}}</option>
                   {% endif %}
              </select>
            </div>
			
			<label class="col-sm-2 control-label" for="dibseasy_frontend_debug">{{ entry_dibseasy_frontend_debug }}</label>
            <div class="col-sm-4">
				<select name="payment_dibseasy_frontend_debug" id="input-frontend-debug" class="form-control">
                   {% if payment_dibseasy_frontend_debug %}
                        <option value="1" selected="selected"> {{text_enabled}}</option>
                        <option value="0"> {{text_disabled}} </option>
                    {% else %}
                        <option value="1"> {{text_enabled}} </option>
                        <option value="0" selected="selected"> {{text_disabled}}</option>
                   {% endif %}
              </select>
            </div>
			
         </div>
		 
		 
         
                
        <!--  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_debug }}</label>
            <div class="col-sm-10">
              <select name="dibseasy_debug_mode" id="input-status" class="form-control">
                   {% if dibseasy_debug_mode %}
                        <option value="1" selected="selected"> {{text_enabled}}</option>
                        <option value="0"> {{text_disabled}} </option>
                    {% else %}
                        <option value="1"> {{text_enabled}} </option>
                        <option value="0" selected="selected"> {{text_disabled}}</option>
                   {% endif %}
              </select>
            </div>
          </div> -->
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}